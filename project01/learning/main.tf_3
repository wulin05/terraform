provider "aws" {
  
}

// 自定义参数
variable "vpc_cidr_block" {
  description = "vpc cidr block"
}

// 创建新的vpc,名为Tokyo-vpc03-dev
resource "aws_vpc" "development_vpc" {
  # cidr_block = "10.0.0.0/16"
  // 使用上面的自定义参数,有三种赋值的方法:①terraform apply ②terraform apply -var "vpc_cidr_block=10.0.0.0/16" ③使用terraform.tfvars文件
  cidr_block = var.vpc_cidr_block  
  tags = {
    Name = "Tokyo-vpc03-dev"
  }
}

// 通过data定义获取当前的Region有哪些available_zones（从下面调用的方法,可以看出结果是列表）
data "aws_availability_zones" "available" {}

// 这部分是chatGpt教的: 在当前Region（有多少个可用区）分别创建子网,掩码为16+8=24位
resource "aws_subnet" "dev_subnets" {
  count = length(data.aws_availability_zones.available.names)
  vpc_id            = aws_vpc.development_vpc.id
  cidr_block        = cidrsubnet("10.0.0.0/16", 8, count.index)
  availability_zone = data.aws_availability_zones.available.names[count.index]
  tags = {
    Name = "dev-subnet-${count.index + 1}"
  }
}

output "aws_availability_zones" {
  value = data.aws_availability_zones.available.names
}
